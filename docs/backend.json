{
  "entities": {
    "faculty": {
      "title": "Faculty",
      "description": "Represents a faculty within the university.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the faculty."
        },
        "code": {
          "type": "string",
          "description": "The unique code for the faculty (e.g., 'FICCT')."
        }
      },
      "required": ["name", "code"]
    },
    "career": {
      "title": "Career",
      "description": "Represents an academic program within a faculty.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the academic program."
        },
        "code": {
          "type": "string",
          "description": "The unique code for the career (e.g., 'INF')."
        },
        "facultyCode": {
          "type": "string",
          "description": "The code of the faculty this career belongs to."
        }
      },
      "required": ["name", "code", "facultyCode"]
    },
    "subject": {
      "title": "Subject",
      "description": "Represents an academic subject or course.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the subject."
        },
        "code": {
          "type": "string",
          "description": "The unique code for the subject (e.g., 'INF-111')."
        },
        "level": {
            "type": "number",
            "description": "The academic level or semester for the subject."
        },
        "credits": {
            "type": "number",
            "description": "The number of credits the subject is worth."
        }
      },
      "required": ["name", "code", "level", "credits"]
    },
    "teacher": {
      "title": "Teacher",
      "description": "Represents a teacher or professor.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the teacher."
        },
        "code": {
          "type": "string",
          "description": "The unique code for the teacher."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The teacher's email address."
        },
        "category": {
          "type": "string",
          "enum": ["Titular", "Asociado", "Asistente"],
          "description": "The academic category of the teacher."
        },
        "dedication": {
          "type": "string",
          "enum": ["Tiempo Completo", "Medio Tiempo", "Hora Catedra"],
          "description": "The dedication level of the teacher."
        },
        "avatar": {
            "type": "string",
            "description": "URL to the teacher's avatar image."
        }
      },
      "required": ["name", "code", "email", "category", "dedication"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/faculties/{facultyId}": {
      "schema": {
        "$ref": "#/entities/faculty"
      },
      "description": "Collection of university faculties."
    },
    "/careers/{careerId}": {
      "schema": {
        "$ref": "#/entities/career"
      },
      "description": "Collection of academic careers."
    },
    "/subjects/{subjectId}": {
      "schema": {
        "$ref": "#/entities/subject"
      },
      "description": "Collection of academic subjects."
    },
    "/teachers/{teacherId}": {
      "schema": {
        "$ref": "#/entities/teacher"
      },
      "description": "Collection of university teachers."
    }
  }
}
