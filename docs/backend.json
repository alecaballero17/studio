{
  "entities": {
    "faculty": {
      "title": "Faculty",
      "description": "Represents a faculty within the university.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the faculty."
        },
        "code": {
          "type": "string",
          "description": "The unique code for the faculty (e.g., 'FICCT')."
        }
      },
      "required": ["name", "code"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/faculties/{facultyId}": {
      "schema": {
        "$ref": "#/entities/faculty"
      },
      "description": "Collection of university faculties."
    }
  }
}
